{
    "id": "water-consumption",
    "name": {
        "en": "Water Consumption",
        "fr": "Consommation d'eau"
    },
    "class": "sensor",
    "capabilities": [
        "measure_water",
        "meter_water"
    ],
    "energy": {
        "cumulative": true
    },
    "platforms": [
        "local"
    ],
    "connectivity": [
        "cloud"
    ],
    "images": {
        "small": "{{driverAssetsPath}}/images/small.png",
        "large": "{{driverAssetsPath}}/images/large.png",
        "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
    },
    "pair": [
        {
            "id": "login_credentials",
            "template": "login_credentials",
            "options": {
                "title": {
                    "en": "Login to SAUR",
                    "fr": "Connexion à SAUR"
                },
                "usernameLabel": {
                    "en": "Email",
                    "fr": "Email"
                },
                "usernamePlaceholder": {
                    "en": "your.email@example.com",
                    "fr": "votre.email@exemple.fr"
                },
                "passwordLabel": {
                    "en": "Password",
                    "fr": "Mot de passe"
                },
                "passwordPlaceholder": {
                    "en": "Password",
                    "fr": "Mot de passe"
                }
            }
        },
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_devices"
            }
        },
        {
            "id": "add_devices",
            "template": "add_devices"
        }
    ],
    "settings": [
        {
            "type": "group",
            "label": {
                "en": "Account settings",
                "fr": "Paramètres du compte"
            },
            "children": [
                {
                    "id": "email",
                    "type": "text",
                    "label": {
                        "en": "Email",
                        "fr": "Email"
                    },
                    "value": ""
                },
                {
                    "id": "password",
                    "type": "password",
                    "label": {
                        "en": "Password",
                        "fr": "Mot de passe"
                    },
                    "value": ""
                }
            ]
        }
    ]
}